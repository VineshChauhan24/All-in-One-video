<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nemosofts.allinone.video">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.LatestActivity" />
        <activity android:name=".Activity.All_VideoActivity" />
        <activity android:name=".Activity.Most_viewActivity" />
        <activity android:name=".Activity.CatActivity" />
        <activity android:name=".Activity.VideoActivity" />
        <activity android:name=".Activity.AboutActivity" />
        <activity android:name=".Activity.SettingActivity" />
        <activity android:name=".Activity.Banner_Activity" />
        <activity android:name=".Activity.intActivity" />
        <activity android:name=".Activity.Fav_VideoActivity" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Login.RegisterActivity" />

        <activity
            android:name=".Activity.video.DailymotionActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme4" />
        <activity
            android:name=".Activity.video.VimeoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme4" />
        <activity
            android:name=".Activity.video.FbActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme4" />

        <activity
            android:name=".Activity.video.PlayerActivity"
            android:theme="@style/AppTheme4" />
        <activity
            android:name=".Activity.YoutubeActivity"
            android:theme="@style/AppTheme4" />
        <activity
            android:name=".Activity.video.All_PlayerActivity"
            android:theme="@style/AppTheme4" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>